<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ceng319.lifelinesbreathalyzer.ResultsActivity"
    tools:showIn="@layout/activity_results">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:text="This TextView will display certain messages to the user
    depending on their alcohol level and heartbeat reading."
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_height="match_parent"
                android:id="@+id/ResultsTXTmsg"
                android:background="@drawable/border_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:text="@string/callPage"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/bsizexl"
                        android:background="@drawable/mybutton"
                        android:textSize="20dp"
                        android:id="@+id/ResultsOption1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp">

                    <Button
                        android:text="@string/callTaxi"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/bsizexl"
                        android:background="@drawable/mybutton"
                        android:textSize="20dp"
                        android:id="@+id/ResultsOption2" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp">

                    <Button
                        android:text="@string/findHotel"
                        android:layout_width="fill_parent"
                        android:textSize="20dp"
                        android:layout_height="@dimen/bsizexl"
                        android:background="@drawable/mybutton"
                        android:id="@+id/ResultsOption3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp">

                    <Button
                        android:text="@string/pastRecords"
                        android:layout_width="fill_parent"
                        android:textSize="20dp"
                        android:layout_height="@dimen/bsizexl"
                        android:background="@drawable/mybutton"
                        android:id="@+id/ResultsOption4" />
                </TableRow>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
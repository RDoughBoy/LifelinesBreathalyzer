<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="4dip" android:color="#ef5451" />
            <gradient android:angle="-90" android:startColor="#ef5451" android:endColor="#e57474"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="4dip" android:color="#b71e1e" />
            <solid android:color="#c62929"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="4dip" android:color="#ef5451" />
            <gradient android:angle="-90" android:startColor="#ef5451" android:endColor="#f44437" />
        </shape>
    </item>
</selector>